{% set id = field('id') %}
{% set class = field('class') %}

{% set classes = classNames('qx-element qx-element-custom-text', visibilityClass(node.visibility), class) %}
{% set event = field('prepare_content')|default('false') %}

{% set animation = field("animation") %}
{% set animationRepeat = field("animation_repeat") %}
{% set animationDelay = field('animation_delay').value %}
{% set background = field('background') %}

{% embed "animation.twig" with {
    "id" : id,
    "classes" : classes,
    "animation" : animation,
    "animationRepeat" : animationRepeat,
    "animationDelay" : animationDelay,
    "background" : background
} %}
    {% block element %}
    	{% if event %}
    		{{ prepareContent(field('content'), event)|raw }}
    	{% else %}
	        {{ field('content')|raw }}
    	{% endif %}

    {% endblock %}
{% endembed %}
